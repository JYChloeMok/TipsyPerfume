<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="productMapper">
	<insert id="insertProductCategory" parameterType="productCategory">
		INSERT
			INTO
				TB_PRODUCT_CATEGORY
			VALUES(
			SEQ_PRODUCT_CATEGORY.NEXTVAL,
			'A',
			'C',
			#{pdtManufac},
			#{pdtGroup}
			)
	</insert>
	<select id="selectProductCategory"  resultType="productCategory">
		SELECT
			MAX(PDT_CATEG_NO)
		FROM
	TB_PRODUCT_CATEGORY
	</select>
	<insert id="insertProduct">
		INSERT
			INTO
				TB_PRODUCT
			VALUES(
				SEQ_PRODUCT.NEXTVAL,
				#{result},
				#{pdtName},
				#{pdtPrice},
				#{pdtStock},
				SYSDATE,
				#{pdtIntro},
				#{pdtDescription}
				#{pdtIngredient},
				#{pdtShipping},
				0,
				0,
				'Y',
				'Y'
			)
	</insert>

</mapper>